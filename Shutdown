RED='\033[0;31m'
BLUE='\033[0;34m'
GREEN='\033[1;32m'
PURP='\033[0;35m'
YEL='\033[1;33m'
BO='\033[0;33m'
NC='\033[0m' # No Color
printf "${BLUE}FARBLOG V1.0 ${RED}UPDATE${YEL} UPRGADE ${GREEN}AUTOREMOVE${NC}\n"
printf "${RED}"
sudo apt-get update -y 
printf "${YEL}"
sudo apt-get upgrade -y
printf "${GREEN}"
sudo apt-get autoremove -y
printf "${RED}\n"
echo "F${BLUE}e${GREEN}r${YEL}t${PURP}i${BO}g"
printf "${NC}\n"
date
printf "\n${NC}"
shutdown
printf "\n${NC}"
